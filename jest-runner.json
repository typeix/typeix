{
  "verbose": true,
  "transform": {
    "^(.+)\\.tsx?$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "roots": [
    "<rootDir>/utils/"
  ],
  "testMatch": [
    "**/*-spec.ts",
    "*-spec.ts"
  ],
  "collectCoverage": false,
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules",
    "<rootDir>/utils/*-spec.ts",
    "<rootDir>/packages",
    "<rootDir>/utils/index.ts"
  ],
  "coverageReporters": [
    ["lcov", {"projectRoot": "./"}]
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
