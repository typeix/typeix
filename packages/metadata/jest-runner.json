{
  "verbose": true,
  "transform": {
    "^(.+)\\.tsx?$": "ts-jest"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "roots": [
    "<rootDir>/src/"
  ],
  "testMatch": [
    "**/*-spec.ts",
    "*-spec.ts"
  ],
  "collectCoverage": false,
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules",
    "<rootDir>/src/*-spec.ts",
    "<rootDir>/src/index.ts"
  ],
  "coverageReporters": [
    "json",
    "text",
    "html",
    ["lcov", {"projectRoot": "./../../"}]
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
