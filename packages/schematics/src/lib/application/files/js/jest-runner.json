{
  "verbose": true,
  "moduleNameMapper": {
    "~/(.*)": "<rootDir>/src/$1"
  },
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "node"
  ],
  "roots": [
    "<rootDir>/src/"
  ],
  "testMatch": [
    "**/*spec.js",
    "*spec.js"
  ],
  "collectCoverage": false,
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules",
    "<rootDir>/src/**/*spec.js",
    "<rootDir>/src/*spec.js"
  ],
  "coverageReporters": [
    "json",
    ["lcov", {"projectRoot": "./../"}],
    "text",
    "html"
  ],
  "testEnvironment": "node",
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
