{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2019",
    "diagnostics": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
